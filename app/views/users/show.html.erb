<h1 class="page-title">🏠</h1>
<p class="user-info"><strong>ユーザー名:</strong> <%= @user.nickname %></p>
<p class="user-info"><strong>メールアドレス:</strong> <%= @user.email %></p>

<div class="post-section">
  <h2>自分の投稿</h2>
  <ul class="post-list">
    <% @posts.each do |post| %>
      <li class="post-item">
        <div class="post-content">
          <p><strong>内容:</strong> <%= post.content %></p>
          <p><strong>日時:</strong> <%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="post-section">
  <h2>いいねした投稿</h2>
  <ul class="post-list">
    <% @liked_posts.each do |post| %>
      <li class="post-item">
        <div class="post-content">
          <p><strong>内容:</strong> <%= post.content %></p>
          <p><strong>日時:</strong> <%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to 'タイトル一覧に戻る', dashboard_path, class: 'back-to-dashboard' %>

<style>
  /* マイページのスタイル */
  .page-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 20px;
    color: #333;
  }

  .user-info {
    font-size: 1.1rem;
    color: #555;
    margin: 10px 0;
  }

  .post-section {
    margin: 30px 0;
  }

  .post-section h2 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 15px;
  }

  .post-list {
    list-style-type: none;
    padding: 0;
  }

  .post-item {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 15px;
    transition: all 0.3s ease;
  }

  .post-item:hover {
    background-color: #f1f1f1;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .post-content {
    color: #444;
    line-height: 1.6;
  }

  .post-content p {
    margin: 5px 0;
  }

  .post-content strong {
    color: #007bff;
  }

  /* 戻るリンクのスタイル */
  .back-to-dashboard {
    display: inline-block;
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    text-align: center;
    margin-top: 20px;
    font-size: 1rem;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .back-to-dashboard:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
  }

  .back-to-dashboard:active {
    background-color: #003d80;
  }
</style>

