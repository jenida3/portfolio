<h2 style="text-align: center; margin-bottom: 20px;">パスワードリセット申請</h2>

<div style="max-width: 400px; margin: 0 auto; padding: 20px; background: #fff; border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
  <%= form_with url: password_resets_path, local: true do |f| %>
    <div style="margin-bottom: 15px;">
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "申請", style: "background: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer; width: 100%;" %>
    </div>
  <% end %>
</div>

