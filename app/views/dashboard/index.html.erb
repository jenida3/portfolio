<style>
  /* 全体のスタイル */
  body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f4;
    color: #333;
    margin: 0;
    padding: 20px;
  }

  /* ヘッダー */
  h1 {
    font-size: 2.5rem;
    color: #555;
    text-align: center;
    margin-bottom: 30px;
  }

  /* ログイン・ログアウトリンク */
  .auth-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 40px;
  }

  .auth-buttons a {
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 5px;
    color: white;
    transition: background-color 0.3s;
    font-size: 1rem;
  }

  .logout-button {
    background-color: #d9534f;
  }

  .logout-button:hover {
    background-color: #c9302c;
  }

  .login-button {
    background-color: #0275d8;
  }

  .login-button:hover {
    background-color: #025aa5;
  }

  .signup-button {
    background-color: #5cb85c;
  }

  .signup-button:hover {
    background-color: #4cae4c;
  }

  /* ゲームカード */
  .games-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .game-card {
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  }

  .game-card h3 {
    margin: 0 0 10px;
    font-size: 1.5rem;
    color: #0275d8;
  }

  .game-card h3 a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s;
  }

  .game-card h3 a:hover {
    color: #014c8c;
  }

  .game-card p {
    color: #666;
    font-size: 1rem;
    margin: 0;
  }
</style>

<div class="auth-buttons">
  <% if logged_in? %>
    <%= link_to 'ログアウト', logout_path, method: :delete, class: 'logout-button' %>
  <% else %>
    <%= link_to 'ログイン', login_path, class: 'login-button' %>
    <%= link_to '新規登録', signup_path, class: 'signup-button' %>
  <% end %>
</div>

<h1>ゲームタイトル一覧</h1>

<div class="games-container">
  <% @games.each do |game| %>
    <div class="game-card">
      <h3><%= link_to game.title, game_path(game) %></h3>
      <p><%= game.description %></p>
    </div>
  <% end %>
</div>
