<style>
  .form-container {
    background-color: white;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    margin: 50px auto;
    font-family: Arial, sans-serif;
  }

  .form-container h1 {
    font-size: 1.8rem;
    color: #555;
    margin-bottom: 20px;
    text-align: center;
  }

  .form-container label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #444;
  }

  .form-container input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
    box-sizing: border-box;
  }

  .form-container input:focus {
    outline: none;
    border-color: #007BFF;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .form-container .submit-btn {
    background-color: #007BFF; /* 青色 */
    color: white;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    width: 100%;
    transition: background-color 0.3s ease;
  }

  .form-container .submit-btn:hover {
    background-color: #0056b3; /* 青色の濃い版 */
  }

  .form-container .back-link {
    display: block;
    text-align: center;
    margin-top: 20px;
    color: #007BFF;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .form-container .back-link:hover {
    color: #0056b3;
  }

  .form-container .password-link {
    display: block;
    text-align: center;
    margin-top: 15px;
    color: #007BFF;
    font-size: 1rem;
    text-decoration: none;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #007BFF;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .form-container .password-link:hover {
    background-color: #007BFF;
    color: white;
  }
</style>

<div class="form-container">
  <h1>ログイン</h1>
  <%= form_with(url: login_path, method: :post, local: true) do |form| %>
    <div>
      <%= form.label :email, "メールアドレス" %>
      <%= form.email_field :email, required: true %>
    </div>
    <div>
      <%= form.label :password, "パスワード" %>
      <%= form.password_field :password, required: true %>
    </div>
    <div>
      <%= form.submit "ログイン", class: 'submit-btn' %>
      <%= link_to 'passwordをお忘れの方はこちら', new_password_reset_path, class: 'password-link' %>
    </div>
  <% end %>
  <%= link_to '戻る', dashboard_path, class: 'back-link' %>
</div>
